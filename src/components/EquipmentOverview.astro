---
// src/components/EquipmentOverview.astro
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const equipment = await getCollection('equipment');
---
<section id="equipment" class="bg-white dark:bg-gray-900 py-20 px-8">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold mb-12 text-gray-900 dark:text-white">Our Core Solutions</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 text-left">
      {equipment.map(item => (
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden flex flex-col">
          <div class="w-full h-48 bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
            {/* Placeholder for image */}
          </div>
          <div class="p-6 flex flex-col flex-grow">
            <h3 class="text-2xl font-bold mb-3 text-gray-900 dark:text-white">{item.data.title}</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6 flex-grow">
              {item.data.description}
            </p>
            <a href={`/equipment/${item.slug}`} class="text-sky-500 hover:text-sky-400 font-semibold transition-colors duration-300 self-start">
              Learn More â†’
            </a>
          </div>
        </div>
      ))}
    </div>
    <div class="mt-16">
      <a href="/equipment" class="bg-[#0955A9] hover:bg-[#07448a] text-white font-bold py-3 px-6 rounded-lg text-lg transition-colors duration-300">
        View All Equipment
      </a>
    </div>
  </div>
</section> 