---
// src/components/EquipmentOverview.astro
import { getCollection } from 'astro:content';

const allEquipment = await getCollection('equipment');

// Sort equipment in the desired order: trailers, conex containers, office containers
const desiredOrder = ['climate-controlled-trailer', 'containers', 'office-container'];
const equipment = desiredOrder
  .map(slug => allEquipment.find(item => item.slug === slug))
  .filter((item): item is NonNullable<typeof item> => item !== undefined);
---
<section class="py-12 sm:py-16 bg-gray-50 bg-pattern relative">
<div class="container mx-auto px-4 sm:px-8 text-center">
  <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-4 sm:mb-6 text-shadow-subtle animate-fadeInUp" style="line-height: 1.5;">Our Equipment</h2>
  <p class="text-base sm:text-lg text-gray-700 mb-8 sm:mb-12 max-w-3xl mx-auto animate-fadeInUp">
    Self-powered, climate-controlled mobile storage solutions engineered for the toughest job sites.
  </p>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
    {equipment.map((item, index) => (
      <a href={`/equipment/${item.slug}`} class="block h-full">
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 focus-enhanced group h-full flex flex-col" style={`animation-delay: ${index * 0.1}s`}>
          <div class="relative overflow-hidden">
            <img 
              src={typeof item.data.image === 'string' ? item.data.image : item.data.image?.src} 
              alt={item.data.title}
              class="w-full h-48 sm:h-56 object-cover transition-transform duration-300 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="absolute top-4 right-4 bg-[#0955A9] text-white px-3 py-1 rounded-full text-sm font-semibold opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              View Details â†’
            </div>
          </div>
          <div class="p-4 sm:p-6 flex flex-col flex-grow">
            <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2 sm:mb-3 text-shadow-subtle group-hover:text-[#0955A9] transition-colors duration-300" style="line-height: 1.4;">{item.data.title}</h3>
            <p class="text-sm sm:text-base text-gray-600 mb-6 flex-grow">{item.data.description}</p>
            <div class="border-2 border-[#0955A9] text-[#0955A9] group-hover:bg-[#0955A9] group-hover:text-white font-bold py-3 px-4 rounded-lg text-sm sm:text-base transition-all duration-300 transform group-hover:scale-105 focus-enhanced shadow-md group-hover:shadow-lg text-center mt-auto">
              View Full Details & Specs
            </div>
          </div>
        </div>
      </a>
    ))}
  </div>
</div>
</section> 