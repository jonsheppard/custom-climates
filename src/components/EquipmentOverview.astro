---
// src/components/EquipmentOverview.astro
import { getCollection } from 'astro:content';

const equipment = await getCollection('equipment');
---
<section class="py-12 sm:py-16 bg-gray-50" style="width: 100%; margin: 0;">
<div style="width: 100%; max-width: 80rem; margin: 0 auto; padding-left: 1rem; padding-right: 1rem; text-align: center;">
  <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-4 sm:mb-6" style="line-height: 1.5;">Our Equipment</h2>
  <p class="text-base sm:text-lg text-gray-700 mb-8 sm:mb-12 mx-auto" style="max-width: 48rem;">
    Self-powered, climate-controlled mobile storage solutions engineered for the toughest job sites.
  </p>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
    {equipment.map((item) => (
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                 <img 
           src={typeof item.data.image === 'string' ? item.data.image : item.data.image?.src} 
           alt={item.data.title}
           class="w-full h-48 sm:h-56 object-cover"
         />
        <div class="p-4 sm:p-6">
          <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2 sm:mb-3" style="line-height: 1.4;">{item.data.title}</h3>
          <p class="text-sm sm:text-base text-gray-600 mb-4">{item.data.description}</p>
          <a 
            href={`/equipment/${item.slug}`}
            class="bg-[#0955A9] hover:bg-[#07448a] text-white font-bold py-2 px-4 rounded text-sm sm:text-base transition-colors duration-300 inline-block"
          >
            View Details
          </a>
        </div>
      </div>
    ))}
  </div>
</div>
</section> 