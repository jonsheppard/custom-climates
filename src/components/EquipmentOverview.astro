---
// src/components/EquipmentOverview.astro

import { getCollection } from 'astro:content';

const equipment = await getCollection('equipment');
---
<section id="equipment" class="bg-gray-900 py-20 px-8">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold mb-12">Our Core Offerings</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {equipment.map(item => (
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg">
          <img src={item.data.image} alt={item.data.title} class="w-full h-64 object-cover">
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-2">{item.data.title}</h3>
            <p class="text-gray-400 mb-4">{item.data.description}</p>
            <a href={`/equipment/${item.slug}`} class="text-blue-400 hover:underline">Learn More &rarr;</a>
          </div>
        </div>
      ))}
    </div>
    <div class="mt-16">
      <a href="/equipment" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg text-lg">
        View All Equipment
      </a>
    </div>
  </div>
</section> 