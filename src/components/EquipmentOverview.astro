---
// src/components/EquipmentOverview.astro
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const equipment = await getCollection('equipment');
---
<section id="equipment" class="bg-white dark:bg-gray-900 py-20 px-8">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold mb-4 text-gray-900 dark:text-white" style="line-height: 1.5;">If It Can Melt, Warp, or Spoil: We Climate-Guard It</h2>
    <p class="text-xl text-gray-600 dark:text-gray-300 mb-12">Job-site weather damage costs American builders $2.5B each year. Here's how we stop it at the gate.</p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 text-left">
      {equipment.map(item => (
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden flex flex-col">
          <img src={typeof item.data.image === 'string' ? item.data.image : item.data.image?.src} alt={item.data.title} class="w-full h-48 object-cover" />
          <div class="p-6 flex flex-col flex-grow">
            <h3 class="text-2xl font-bold mb-3 text-gray-900 dark:text-white" style="line-height: 1.4;">{item.data.title}</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6 flex-grow">
              {item.data.description}
            </p>
            <a href={`/equipment/${item.slug}`} class="text-sky-500 hover:text-sky-400 font-semibold transition-colors duration-300 self-start">
              Learn More â†’
            </a>
          </div>
        </div>
      ))}
    </div>
    <div class="text-center mt-12">
      <a href="/equipment" class="inline-flex items-center text-[#0955A9] border-2 border-[#0955A9] hover:bg-[#0955A9] hover:text-white font-bold py-3 px-6 rounded-lg text-lg transition-all duration-300">
        View All Equipment
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section> 