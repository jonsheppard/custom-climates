---
const features = [
    { feature: 'Mobility', trailer: 'High (Gooseneck)', container: 'Low (Stationary)' },
    { feature: 'Capacity', trailer: 'Standard', container: 'High Volume' },
    { feature: 'Deployment Speed', trailer: 'Under 30 minutes', container: '2-4 hours' },
    { feature: 'Power Source', trailer: 'On-board Generator & Shore Power', container: 'Requires Site Power / Generator' },
    { feature: 'Best For', trailer: 'Active job sites, frequent access', container: 'Long-term storage, large quantities' },
];
---

<section class="py-20">
    <div class="container mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold font-heading">Trailer vs. Container: Which is Right for You?</h2>
            <p class="mt-4 text-lg text-neutral-medium">Find the perfect fit for your project's needs.</p>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full min-w-max text-left border-collapse">
                <thead>
                    <tr class="bg-neutral-light">
                        <th class="p-4 font-bold font-heading border-b">Feature</th>
                        <th class="p-4 font-bold font-heading border-b">Trailers</th>
                        <th class="p-4 font-bold font-heading border-b">Containers</th>
                    </tr>
                </thead>
                <tbody>
                    {features.map((item, index) => (
                        <tr class={`border-b ${index % 2 === 0 ? 'bg-white' : 'bg-neutral-light'}`}>
                            <td class="p-4 font-bold">{item.feature}</td>
                            <td class="p-4">{item.trailer}</td>
                            <td class="p-4">{item.container}</td>
                        </tr>
                    ))}
                </tbody>
            </table>
        </div>
        <div class="mt-12 text-center">
            <a href="/contact?quote=true" class="bg-brand-orange text-white font-bold py-3 px-8 rounded-lg text-lg hover:bg-opacity-90 transition-colors">
                Request a Quote
            </a>
        </div>
    </div>
</section> 