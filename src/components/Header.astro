---
const navLinks = [
	{ name: 'Home', href: '/' },
	{ name: 'Services', href: '/services' },
	{ name: 'How It Works', href: '/how-it-works' },
	{ name: 'Case Studies', href: '/case-studies' },
	{ name: 'About', href: '/about' },
	{ name: 'Contact', href: '/contact' },
];
---

<header class="sticky top-0 z-50 bg-white shadow-md">
	<nav class="container mx-auto px-6 py-3 flex justify-between items-center">
		<a href="/" class="text-2xl font-bold font-heading text-brand-blue">Custom Climates</a>

		<div class="hidden md:flex space-x-6 items-center">
			{navLinks.map(link => (
				<a href={link.href} class="text-neutral-medium hover:text-brand-blue">{link.name}</a>
			))}
		</div>

		<div class="hidden md:flex items-center space-x-6">
			<a href="tel:435-773-1076" class="text-neutral-medium font-bold hover:text-brand-blue">(435) 773-1076</a>
			<a href="/contact?quote=true" class="bg-brand-orange text-white font-bold py-2 px-4 rounded hover:bg-opacity-90 transition-colors">
				Get Quote
			</a>
		</div>

		<div class="md:hidden">
			<button id="mobile-menu-button" class="text-neutral-dark focus:outline-none">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
				</svg>
			</button>
		</div>
	</nav>

	<!-- Mobile Menu -->
	<div id="mobile-menu" class="hidden md:hidden">
		<div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
			{navLinks.map(link => (
				<a href={link.href} class="block px-3 py-2 rounded-md text-base font-medium text-neutral-dark hover:text-white hover:bg-brand-blue">{link.name}</a>
			))}
			<div class="border-t border-neutral-medium my-2"></div>
			<a href="tel:435-773-1076" class="block px-3 py-2 rounded-md text-base font-medium text-neutral-dark hover:text-white hover:bg-brand-blue">(435) 773-1076</a>
			<a href="/contact?quote=true" class="block w-full text-center bg-brand-orange text-white font-bold mt-2 py-2 px-4 rounded hover:bg-opacity-90 transition-colors">
				Get Quote
			</a>
		</div>
	</div>
</header>

<script>
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');

	mobileMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});
</script> 