---
import { Image } from 'astro:assets';
import video from '../assets/images/hero-loop.mp4';
// src/components/Hero.astro
interface Props {
  headline: string;
  subtext: string;
  trust_text: string;
  secondary_cta: string;
}

const { headline, subtext, trust_text, secondary_cta } = Astro.props;
---
<section class="relative bg-gray-900 text-white overflow-hidden">
  <video
    autoplay
    loop
    muted
    playsinline
    class="absolute top-0 left-0 w-full h-full object-cover z-0"
    src={video}
  ></video>
  <div class="absolute top-0 left-0 w-full h-full bg-black opacity-60 z-10"></div>
  <div class="relative container mx-auto px-8 py-24 lg:py-40 z-20">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div class="text-center lg:text-left">
        <h1 class="text-4xl md:text-5xl font-extrabold leading-tight">{headline}</h1>
        <p class="mt-4 text-lg md:text-xl text-gray-200 max-w-xl mx-auto lg:mx-0">{subtext}</p>
        {trust_text && <p class="mt-6 font-semibold text-sky-300">{trust_text}</p>}
      </div>
      <div class="bg-slate-800/80 p-8 rounded-lg shadow-2xl">
        <h3 class="text-2xl font-bold text-center mb-6">Get a Quote</h3>
        <form name="contact" method="POST" data-netlify="true" data-netlify-honeypot="bot-field">
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>
              Don't fill this out if you're human: <input name="bot-field" />
            </label>
          </p>
          <div class="mb-4">
            <label for="name" class="block text-sm font-medium text-gray-300 sr-only">Name</label>
            <input type="text" id="name" name="name" placeholder="Full Name" required class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 text-white">
          </div>
          <div class="mb-4">
            <label for="phone" class="block text-sm font-medium text-gray-300 sr-only">Phone</label>
            <input type="tel" id="phone" name="phone" placeholder="Phone Number" required class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 text-white">
          </div>
          <div class="mb-4">
            <label for="email" class="block text-sm font-medium text-gray-300 sr-only">Email</label>
            <input type="email" id="email" name="email" placeholder="Email Address" required class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 text-white">
          </div>
          <button type="submit" class="w-full bg-[#0955A9] hover:bg-[#07448a] text-white font-bold py-3 px-6 rounded-lg text-lg transition-colors duration-300">
            Get Quote Now
          </button>
        </form>
        <div class="text-center mt-6">
            <a href="#equipment" class="text-sky-300 hover:text-sky-200 transition-colors duration-300 font-medium">
                {secondary_cta}
            </a>
        </div>
      </div>
    </div>
  </div>
</section> 