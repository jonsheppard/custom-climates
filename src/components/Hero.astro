---
import { Image } from 'astro:assets';
import video from '../assets/images/hero-loop.mp4';
// src/components/Hero.astro
interface Props {
  headline: string;
  subtext: string;
  trust_text: string;
  secondary_cta: string;
}

const { headline, subtext, trust_text, secondary_cta } = Astro.props;
---
<section class="relative bg-gray-900 text-white overflow-hidden">
  <video
    autoplay
    loop
    muted
    playsinline
    class="absolute top-0 left-0 w-full h-full object-cover z-0"
    src={video}
  ></video>
  <div
    class="absolute top-0 left-0 w-full h-full bg-black z-10"
    style="opacity:0.15;"
  ></div>
  <div class="relative container mx-auto px-4 sm:px-8 py-16 sm:py-24 lg:py-40 z-20">
    <div class="text-center max-w-4xl mx-auto">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-extrabold mb-4 sm:mb-6" style="line-height: 1.6;">{headline}</h1>
      <p class="text-base sm:text-lg md:text-xl text-gray-200 mb-6 sm:mb-8 max-w-3xl mx-auto">{subtext}</p>
      {trust_text && <p class="mb-8 sm:mb-10 font-semibold text-sky-300 text-base sm:text-lg">{trust_text}</p>}
      
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
        <a href="/contact" class="w-full sm:w-auto bg-[#0955A9] hover:bg-[#07448a] text-white font-bold py-3 sm:py-4 px-6 sm:px-8 rounded-lg text-base sm:text-lg transition-colors duration-300 inline-block text-center max-w-xs">
          Get My Quote
        </a>
        <a href="/equipment" class="text-sky-300 hover:text-sky-200 transition-colors duration-300 font-medium text-base sm:text-lg">
          {secondary_cta}
        </a>
      </div>
    </div>
  </div></section>
