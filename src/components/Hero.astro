---
// src/components/Hero.astro
interface Props {
  headline: string;
  subtext: string;
}

const { headline, subtext } = Astro.props;
---
<section class="bg-gray-900 text-white text-center py-20 px-8">
  <div class="container mx-auto">
    <h1 class="text-5xl font-extrabold leading-tight">{headline}</h1>
    <p class="mt-4 text-xl text-gray-300 max-w-2xl mx-auto">{subtext}</p>
    <div class="mt-8">
      <a href="/contact" class="bg-brand-blue text-white font-bold py-4 px-8 rounded-lg text-lg transition-colors duration-300">
        Request a Quote
      </a>
    </div>
  </div>
</section> 