---
import { Image } from 'astro:assets';
import video from '../assets/images/hero-loop.mp4';
// src/components/Hero.astro
interface Props {
  headline: string;
  subtext: string;
}

const { headline, subtext } = Astro.props;
---
<section class="relative bg-gray-900 text-white text-center py-40 px-8 overflow-hidden">
  <video
    autoplay
    loop
    muted
    playsinline
    class="absolute top-0 left-0 w-full h-full object-cover z-0"
    src={video}
  ></video>
  <div class="absolute top-0 left-0 w-full h-full bg-black opacity-50 z-10"></div>
  <div class="relative container mx-auto z-20">
    <h1 class="text-5xl font-extrabold leading-tight">{headline}</h1>
    <p class="mt-4 text-xl text-gray-300 max-w-2xl mx-auto">{subtext}</p>
    <div class="mt-8">
      <a href="/contact" class="bg-[#0955A9] hover:bg-[#07448a] text-white font-bold py-4 px-8 rounded-lg text-lg transition-colors duration-300">
        Request a Quote
      </a>
    </div>
  </div>
</section> 