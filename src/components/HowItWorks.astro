---
// src/components/HowItWorks.astro
import { Image } from 'astro:assets';
import iconCall from '../assets/images/camera-2.png';
import iconDeploy from '../assets/images/trailer.png';
import iconSupport from '../assets/images/twentyfourseven.png';

const steps = [
  {
    title: "1. Call Us",
    description: "We'll assess your needs and recommend the right solution.",
    icon: iconCall
  },
  {
    title: "2. We Deploy",
    description: "Your climate-controlled unit is delivered to your jobsite, fast.",
    icon: iconDeploy
  },
  {
    title: "3. 24/7 Support",
    description: "We monitor and maintain the equipment around the clock.",
    icon: iconSupport
  }
];
---
<section class="bg-gray-100 dark:bg-gray-800 py-20 px-8">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold mb-16 text-gray-900 dark:text-white">How It Works</h2>
    <div class="relative max-w-5xl mx-auto">
      <!-- The connecting line -->
      <div class="hidden md:block absolute top-10 left-0 w-full h-0.5 bg-gray-300 dark:bg-gray-600"></div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 relative">
        {steps.map((step) => (
          <div class="text-center z-10">
            <div class="flex items-center justify-center w-20 h-20 mx-auto mb-6 bg-white dark:bg-gray-700 p-3 rounded-full shadow-lg border-4 border-gray-100 dark:border-gray-800">
                <Image src={step.icon} alt={step.title} class="w-10 h-10" />
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">{step.title}</h3>
            <p class="text-gray-600 dark:text-gray-400 px-2">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section> 