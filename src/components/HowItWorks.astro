---
// src/components/HowItWorks.astro
const steps = [
  {
    icon: `<svg class="w-12 h-12 mx-auto text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>`,
    title: "1. Call Us",
    description: "We assess your needs and recommend the right solution."
  },
  {
    icon: `<svg class="w-12 h-12 mx-auto text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10l2 2h8a1 1 0 001-1z"></path></svg>`,
    title: "2. Deploy",
    description: "We deliver and set up your equipment, often within 24 hours."
  },
  {
    icon: `<svg class="w-12 h-12 mx-auto text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
    title: "3. Support",
    description: "You get 24/7 monitoring and on-call maintenance."
  }
];
---
<section class="bg-gray-800 py-20 px-8">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold mb-12">How It Works</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      {steps.map(step => (
        <div class="text-center">
          <div class="flex items-center justify-center w-24 h-24 mx-auto mb-4 bg-gray-700 rounded-full" set:html={step.icon} />
          <h3 class="text-2xl font-bold mb-2">{step.title}</h3>
          <p class="text-gray-400">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 