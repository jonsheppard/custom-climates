---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import iconProtect from '../assets/images/icons/features/temperature.png';
import iconLogistics from '../assets/images/icons/features/trailer.png';
import iconSecurity from '../assets/images/icons/features/monitoring.png';

const title = "Construction Industry Solutions | Custom Climates";
const description = "On-site, climate-controlled storage solutions for large-scale construction projects. Protect everything from finish materials to furniture and keep your project on schedule.";

const benefits = [
    {
        title: "Protect Finish Materials",
        description: "Prevent damage to drywall, flooring, and cabinetry from humidity and temperature swings.",
        icon: iconProtect
    },
    {
        title: "Simplify Jobsite Logistics",
        description: "Get a plug-and-play storage unit delivered directly to your site, exactly when you need it.",
        icon: iconLogistics
    },
    {
        title: "Enhance Site Security",
        description: "Secure your valuable materials and equipment from theft and weather with our monitored units.",
        icon: iconSecurity
    }
]
---

<Layout title={title} description={description}>
  <main>
    <!-- Hero Section -->
    <div class="py-24 sm:py-32 px-8 text-center">
        <div class="container mx-auto">
            <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 dark:text-white">Your Partner on the Modern Jobsite</h1>
            <p class="mt-4 text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
                We provide secure, on-site, climate-controlled storage to protect your most valuable materials and keep your project on schedule.
            </p>
        </div>
    </div>

    <!-- Features/Benefits Section -->
    <div class="py-20 bg-gray-100 dark:bg-gray-800 px-8">
      <div class="container mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 dark:text-white">Eliminate Risk. Maximize Efficiency.</h2>
          <p class="mt-4 text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
            Stop wasting time and money on off-site storage or damaged materials. Our solutions are built for the construction workflow.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-12 text-center max-w-5xl mx-auto">
          {benefits.map(benefit => (
            <div>
                <div class="flex items-center justify-center w-20 h-20 mx-auto mb-6 bg-white dark:bg-gray-700 p-3 rounded-full shadow-lg">
                    <Image src={benefit.icon} alt={benefit.title} class="w-10 h-10" />
                </div>
                <h3 class="text-2xl font-bold mb-3 text-gray-900 dark:text-white">{benefit.title}</h3>
                <p class="text-gray-600 dark:text-gray-400">
                  {benefit.description}
                </p>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="py-20 px-8 text-center">
      <h2 class="text-4xl font-bold mb-4 text-gray-900 dark:text-white">Ready to Secure Your Jobsite?</h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
        Let's discuss your project's specific needs and get a quote for a tailored on-site storage solution.
      </p>
      <a href="/contact" class="bg-[#0955A9] hover:bg-[#07448a] text-white font-bold py-4 px-8 rounded-lg text-lg transition-colors duration-300">
          Request a Quote
      </a>
    </div>
  </main>
</Layout> 