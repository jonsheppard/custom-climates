---
import Layout from '../layouts/Layout.astro';

const title = "Industries We Serve | Custom Climates";
const description = "We provide reliable, climate-controlled solutions for construction, events, disaster relief, and a wide range of other industries nationwide.";
---

<Layout title={title} description={description}>
  <main class="py-20 px-8 text-center">
    <h1 class="text-4xl font-bold">Industries We Serve</h1>
    <p class="mt-4 text-lg text-gray-400">
      We provide climate-controlled solutions for a wide range of industries.
    </p>
  </main>
</Layout> 