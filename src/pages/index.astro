---
import { getEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import EquipmentOverview from '../components/EquipmentOverview.astro';
import HowItWorks from '../components/HowItWorks.astro';
import SeoContent from '../components/SeoContent.astro';

const homepage = await getEntry('pages', 'homepage');
const { 
  hero_headline = "Don't Let Weather Ruin Your Schedule", 
  hero_subtext = "We roll in self-powered, climate-controlled trailers that keep your materials installation-ready.",
  hero_trust_text = "Zero delays, zero reorders, and one very happy GC.",
  hero_secondary_cta = "Our Equipment"
} = homepage?.data || {};

const title = "Custom Climates | Onsite Climate Controlled Solutions";
const description = "Don't let weather ruin your schedule. Protect every panel, plank, and pallet with our mobile climate-controlled storage solutions, available 24/7 nationwide.";
---

<Layout title={title} description={description}>
	<main>
		<Hero 
			headline={hero_headline} 
			subtext={hero_subtext}
			trust_text={hero_trust_text}
			secondary_cta={hero_secondary_cta}
		/>
		<EquipmentOverview />
		<HowItWorks />
		<SeoContent />
		<!-- Other sections will go here -->
	</main>
</Layout>
