---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
	title="Case Studies | Custom Climates" 
	description="See how Custom Climates has helped construction projects across the nation avoid costly delays and material damage with our on-site climate control solutions."
>
	<Header />
	<main>
		<section class="py-20 text-center">
			<div class="container mx-auto px-6">
				<h1 class="text-4xl md:text-5xl font-bold font-heading">Customer Success Stories</h1>
				<p class="mt-4 text-lg max-w-2xl mx-auto text-neutral-medium">Real-world examples of how we protect projects and profits.</p>
			</div>
		</section>

		<section class="py-20 bg-neutral-light">
			<div class="container mx-auto px-6 text-center">
				<h2 class="text-3xl font-bold font-heading">Case Studies Coming Soon</h2>
				<p class="mt-4">We are currently compiling our customer success stories to share with you. Check back soon!</p>
			</div>
		</section>

	</main>
	<Footer />
</Layout> 