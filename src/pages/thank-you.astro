---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You">
  <main class="h-screen flex items-center justify-center text-center">
    <div class="text-center">
      <h1 class="text-5xl font-extrabold text-white mb-4">Thank You!</h1>
      <p class="text-xl text-gray-300">Your message has been received. We'll be in touch shortly.</p>
      <a href="/" class="mt-8 inline-block bg-brand-blue text-white font-bold py-3 px-6 rounded-lg transition-colors duration-300">Go Back Home</a>
    </div>
  </main>
</Layout> 