---
import Layout from '../layouts/Layout.astro';
import HowItWorks from '../components/HowItWorks.astro';

const title = "Our Process | Custom Climates";
const description = "Our process is designed to be simple, fast, and reliable. Learn how we go from consultation to delivery and support.";
---

<Layout title={title} description={description}>
  <main class="py-24 sm:py-32">
    <HowItWorks />
    <div class="mt-16 text-center">
        <a href="/contact" class="bg-[#0955A9] hover:bg-[#07448a] text-white font-bold py-4 px-8 rounded-lg text-lg transition-colors duration-300">
            Request a Quote
        </a>
    </div>
  </main>
</Layout> 