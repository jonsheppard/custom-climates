---
import { getEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import HowItWorks from '../components/HowItWorks.astro';

const processPage = await getEntry('pages', 'process');
const hero_headline = (processPage?.data as any)?.hero_headline || "From Phone Call to Climate Control in Three Simple Moves";
const hero_subtext = (processPage?.data as any)?.hero_subtext || "ready, set, ship";
const headline = (processPage?.data as any)?.headline || "We Handle the Heavy Lifting, You Focus on Building";
const subtext = (processPage?.data as any)?.subtext || "Job-site weather damage costs American builders $2.5B each year. Here's how we stop it at the gate.";

const title = "Our Process | Custom Climates";
const description = "From phone call to climate control in three simple moves. We handle the heavy lifting, you focus on building.";
---

<Layout title={title} description={description}>
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-gray-900 to-gray-800 text-white py-24">
      <div class="container mx-auto px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-extrabold mb-4">
          {hero_headline || "From Phone Call to Climate Control in Three Simple Moves"}
        </h1>
        <p class="text-xl text-gray-300 italic">
          {hero_subtext || "ready, set, ship"}
        </p>
      </div>
    </section>

    <!-- Process Overview -->
    <section class="py-20 px-8">
      <div class="container mx-auto text-center">
        <h2 class="text-4xl font-bold mb-4 text-gray-900">
          {headline || "We Handle the Heavy Lifting, You Focus on Building"}
        </h2>
        <p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto">
          {subtext || "Job-site weather damage costs American builders $2.5B each year. Here's how we stop it at the gate."}
        </p>
      </div>
    </section>

    <!-- How It Works Section -->
    <HowItWorks />
    
    <!-- CTA Section -->
    <section class="bg-gray-100 py-16">
      <div class="container mx-auto text-center px-8">
        <h3 class="text-3xl font-bold mb-4 text-gray-900">Ready to Weather-Proof Your Next Project?</h3>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          One quick quote today saves you weeks of rework and thousands in warped, water-logged, or missing materials tomorrow.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-[#0955A9] hover:bg-[#07448a] text-white font-bold py-4 px-8 rounded-lg text-lg transition-colors duration-300">
            Get My Custom Quote
          </a>
          <a href="tel:(435) 773-1076" class="border-2 border-[#0955A9] text-[#0955A9] hover:bg-[#0955A9] hover:text-white font-bold py-4 px-8 rounded-lg text-lg transition-colors duration-300">
            Or Call (435) 773-1076 â†’
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout> 