---
import { getEntryBySlug } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const aboutPage = await getEntryBySlug('pages', 'about');
const { Content } = await aboutPage.render();
---

<Layout 
	title={`${aboutPage.data.title} | Custom Climates`} 
	description="Learn about the mission and team behind Custom Climates, dedicated to protecting your construction projects from costly weather damage."
>
	<Header />
	<main>
		<section class="py-20 text-center">
			<div class="container mx-auto px-6">
				<h1 class="text-4xl md:text-5xl font-bold font-heading">{aboutPage.data.title}</h1>
				<p class="mt-4 text-lg max-w-2xl mx-auto text-neutral-medium">The team dedicated to keeping your project on schedule and your materials pristine.</p>
			</div>
		</section>

		<section class="py-20 bg-neutral-light">
			<div class="container mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
				<div class="prose lg:prose-xl">
					<h2 class="text-3xl font-bold font-heading mb-4">Our Story</h2>
					<Content />
				</div>
				<div>
					<img src="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?q=80&w=2070&auto=format&fit=crop" alt="Construction team working together" class="rounded-lg shadow-lg">
				</div>
			</div>
		</section>

        <section class="py-20">
			<div class="container mx-auto px-6 text-center">
				<h2 class="text-3xl font-bold font-heading">Meet the Team</h2>
                <p class="mt-4 mb-10 text-lg max-w-2xl mx-auto text-neutral-medium">Placeholder for team/founder information.</p>
				<!-- Placeholder for team members -->
			</div>
		</section>

	</main>
	<Footer />
</Layout> 